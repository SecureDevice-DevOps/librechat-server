[req]
distinguished_name = req_distinguished_name
x509_extensions = v3_req
prompt = no

[req_distinguished_name]
C = DK
ST = Copenhagen
L = Copenhagen
O = SITS | SecureDevice
OU = SecureDevice Developers
CN = chad.securedevice.local

[v3_req]
keyUsage = keyEncipherment, dataEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

[alt_names]
DNS.1 = chat.securedevice.local
DNS.2 = chad.securedevice.local
IP.1 = 192.168.1.10 # Optional: Add local IP addresses if needed